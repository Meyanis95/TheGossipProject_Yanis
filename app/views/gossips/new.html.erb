<html>

  <body>
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-4"> Ici tu peux créer ton potion !</h1>
        <p> C'est parti !</p>
      </div>
    </div>
   
   <div class="container mt-5">

    <%= form_tag url_for(action: 'create'), method: "POST" do %>

    <div class = "form-group">
      <%= label_tag 'Titre' %>
      <%= text_field_tag 'title', params['title'], class: "form-control"%>
    </div>
    <div class = "form-group">
      <%= label_tag 'Contenu' %>
      <%= text_area_tag 'content', params['content'], class: "form-control"%>
      
    </div>
    <div class = "form-group">
      <%= submit_tag "Créer un potin", class: "btn btn-primary" %>
    </div>
    <% end %>
   </div>

  </body>
</html>