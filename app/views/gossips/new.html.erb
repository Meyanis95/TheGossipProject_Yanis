<html>

  <body>
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-4"> Ici tu peux créer ton potion !</h1>
        <p> C'est parti !</p>
      </div>
    </div>
   
   <div class="card text-center">
    <%= form_tag url_for(action: 'create'), method: "POST" do %>

      <%= label_tag 'Titre' %>
      <%= text_field_tag 'title'%>
      <br /> <br />

      <%= label_tag 'Contenu' %>
      <%= text_area_tag 'content'%>
      <br /> <br />

      <%= submit_tag "Créer un potin" %>

    <% end %>
   </div>

  </body>
</html>